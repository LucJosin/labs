<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Container Showcase</title>
  <style>
    body { font-family: sans-serif; margin: 2rem; }
    table { border-collapse: collapse; width: 100%; margin-bottom: 2rem; }
    th, td { border: 1px solid #ccc; padding: 0.5rem; text-align: left; }
    form { margin-top: 1rem; }
    .app { max-width: 1200px; margin: 0 auto; }
    button { background-color: transparent; padding: 0.5rem 1rem; border: 1px solid black; cursor: pointer; }
  </style>
</head>
<body>
  <div class="app">
    <h1>ðŸš¢ Container Showcase</h1>
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Image</th>
          <th>Tag</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {{range .}}
        <tr>
          <td>{{.ID}}</td>
          <td>{{.Name}}</td>
          <td>{{.Image}}</td>
          <td>{{.Tag}}</td>
          <td>
            <button onclick="deleteContainer({{.ID}})">Delete</button>
            <button onclick="copyToClipboard('{{.Image}}:{{.Tag}}')">Copy</button>
          </td>
        </tr>
        {{end}}
      </tbody>
    </table>

    <h2>Add New Container</h2>
    <form onsubmit="return addContainer(event)">
      <label>
        Name: <input type="text" id="name" required>
      </label><br>
      <label>
        Image: <input type="text" id="image" required>
      </label><br>
      <label>
        Tag: <input type="text" id="tag" required>
      </label><br>
      <button type="submit">Add</button>
    </form>
  </div>

  <script>
    async function addContainer(e) {
      e.preventDefault();
      const res = await fetch('/api/containers', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          name: document.getElementById('name').value,
          image: document.getElementById('image').value,
          tag: document.getElementById('tag').value
        })
      });
      if (res.ok) {
        location.reload();
      } else {
        alert('Failed to add container');
      }
    }

    async function deleteContainer(id) {
      const res = await fetch('/api/containers/' + id, {
        method: 'DELETE',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ id })
      });
      if (res.ok) {
        location.reload();
      } else {
        alert('Failed to delete container');
      }
    }

    async function copyToClipboard(text) {
      try {
        await navigator.clipboard.writeText(text);
      } catch (err) {
        alert("Couldn't copy to clipboard!")
      }
    }
  </script>
</body>
</html>